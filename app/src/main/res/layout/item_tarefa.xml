<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_btn_tarefa_pessoas"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/btn_tarefa_pessoas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_pessoas"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/btn_pessoas"
        app:layout_constraintEnd_toStartOf="@+id/textViewNome"
        app:layout_constraintStart_toEndOf="@id/btn_tarefa_pessoas"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Tarefa"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_pessoas"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewDataReferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2021"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNome"
        app:layout_constraintLeft_toRightOf="@id/btn_pessoas"/>

</androidx.constraintlayout.widget.ConstraintLayout>